<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:text="SỬA KHOẢN "
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtMoneyEditMoney"
            android:textSize="22dp"
            android:hint="Số tiền"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvDateEditMoney"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="11/05/2021"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnGetDateEditMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày" />
        </LinearLayout>
        <EditText
            android:id="@+id/edtDescriptionEditMoney"
            android:hint="Mô tả"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22dp"
                android:text="Loại "
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spTypeEdit"
                android:entries="@array/moneyType"
                android:layout_gravity="center"
                android:layout_width="350px"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="22dp"
                android:text=" / "
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spUseTypeEdit"
                android:layout_gravity="center"
                android:layout_width="550px"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnUpdateEditMoney"
                android:text="Cập nhật"
                android:layout_weight="1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btnDeleteEditMoney"
                android:text="Xóa"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btnBackEditMoney"
                android:text="Quay lại"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>