<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"

        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvCardMoney"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="200000000"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCardDate"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="20/05/2021"/>

        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCardUseType"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Tiền ngoài"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvCardType"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Tiền thu"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCardDescription"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tiền hoàn thuế"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>