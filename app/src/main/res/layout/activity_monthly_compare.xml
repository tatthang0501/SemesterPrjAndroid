<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">
<TextView
    android:text="SO SÁNH CHI TIÊU THEO THÁNG"
    android:textSize="26dp"
    android:layout_marginTop="20dp"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spCompareType"
            android:entries="@array/moneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spCompareYear"
            android:entries="@array/spCompareYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCreateCompare"
            android:text="Xem"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCompareBack"
            android:text="Quay lại"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/compareBarChart"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"/>

</LinearLayout>